<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical"
    android:background="@drawable/red_background">

    <LinearLayout 
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"  
    	android:padding="@dimen/activity_padding"  > <!-- TEMP FIX ;  was @dimens/linear_padding_side -->
    	
        <EditText
            android:id="@+id/searchBox"
            android:hint="@string/search_search_field" 
            style="@style/EditText" />
        
        <Space
            android:layout_width="fill_parent"
        	android:layout_height="@dimen/activity_padding" /> <!-- TEMP FIX ; was @dimen/linear_padding_height_land -->
        
        <LinearLayout 
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"  >
    		
	    	<LinearLayout 
	    	    android:layout_weight="3"
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"  > 
	    		
	    	    <TextView
		            android:text="@string/search_year_indication"
		            style="@style/IndicationText" />
	    	    
	    	    <EditText
		            android:id="@+id/annee_min_search"
		            android:hint="@string/search_year_min_search"
		            style="@style/EditText"
		            android:layout_weight="1"
		            android:paddingRight="5dp"
		            android:inputType="number" />
	    	    
	    	    <EditText
		            android:id="@+id/annee_max_search"
		            android:hint="@string/search_year_max_search" 
		            style="@style/EditText"
		            android:layout_weight="1"
		            android:paddingLeft="5dp"
		            android:inputType="number" />
	    	    
	        </LinearLayout>
	        
	    	<Space
            android:layout_width="@dimen/activity_padding" 
        	android:layout_height="fill_parent" /> <!--  TEMP FIX ; was @dimen/space_between_box_land -->
	        
	    	<LinearLayout 
	    	    android:layout_weight="3"
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"  > 
	    		
	    	    <TextView
		            android:text="@string/search_price_indication"
		            style="@style/IndicationText" />
	    	    
	    	    <EditText
		            android:id="@+id/prix_min_search"
		            android:hint="@string/search_price_min_search"
		            style="@style/EditText"
		            android:layout_weight="1"
		            android:paddingRight="5dp"
		            android:inputType="number" />
	    	    
	    	    <EditText
		            android:id="@+id/prix_max_search"
		            android:hint="@string/search_price_max_search" 
		            style="@style/EditText"
		            android:layout_weight="1"
		            android:paddingLeft="5dp"
		            android:inputType="number" />
	    		
	    	    
	        </LinearLayout>
	        
	        <Space
            android:layout_width="@dimen/activity_padding"
        	android:layout_height="fill_parent" /> <!--  TEMP FIX ; was @dimen/space_between_box_land -->
	        
	    	<LinearLayout 
	    	    android:layout_weight="3"
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:orientation="vertical"  > 
	    		
	    	    <TextView
		            android:text="@string/search_piece_indication"
		            style="@style/IndicationText" />
	    	    
	    	    <EditText
		            android:id="@+id/piece_min_search"
		            android:hint="@string/search_piece_min_search"
		            style="@style/EditText"
		            android:layout_weight="1"
		            android:paddingRight="5dp"
		            android:inputType="number" />
	    	    
	    	    <EditText
		            android:id="@+id/piece_max_search"
		            android:hint="@string/search_piece_max_search" 
		            style="@style/EditText"
		            android:layout_weight="1"
		            android:paddingLeft="5dp"
		            android:inputType="number" />
	    		
	    	    
	        </LinearLayout>
	        
           
        </LinearLayout>
        
        <Space
            android:layout_width="fill_parent"
        	android:layout_height="@dimen/activity_padding" /> <!-- TEMP FIX ; was @dimen/linear_padding_height_land -->
        
        <LinearLayout
		    android:id="@+id/button_search"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/button_custom"
		    android:gravity="center"
		    android:orientation="horizontal"
		    android:clickable="true">

		    <ImageView
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:src="@drawable/search_button_icon" 
		        android:layout_weight="2"/>
		
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:gravity="left"
		        android:text="@string/search_button_search" 
		        android:textSize="@dimen/activity_padding"
		        android:layout_weight="1"/> <!-- TEMP FIX ; was @dimen/text_box_size -->

		</LinearLayout>
        
        
        
	
     </LinearLayout>
        
        
</RelativeLayout>
 